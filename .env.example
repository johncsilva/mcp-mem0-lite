# MCP
HOST=127.0.0.1
PORT=8050

# Usuario padrao quando user_id nao for informado
DEFAULT_USER_ID=your_username

# Metadados (leve)
DATABASE_URL=sqlite:///mem0.db
CHROMA_PERSIST_DIR=./chroma_db

# Vector store local: CHROMA
VECTOR_STORE_PROVIDER=chroma

# Embeddings via Ollama (local)
EMBEDDING_PROVIDER=ollama
EMBEDDING_MODEL=nomic-embed-text
EMBEDDING_DIMS=768

# LLM para processamento de memorias
LLM_PROVIDER=ollama
LLM_MODEL=llama3.2:latest
#LLM_PROVIDER=openai
#LLM_MODEL=gpt-4o-mini
# Controla se o mem0.add usa LLM (infer). true/false
MEM0_INFER=true

# OpenAI API (alternativa mais rapida e confiavel)
OPENAI_API_KEY=your_openai_api_key
